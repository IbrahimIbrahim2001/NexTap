{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/nextjs",
      "config": {
        "distDir": ".next",           
        "includeFiles": ["public/**"] 
      }
    }
  ],
  
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1",
      "headers": {
        "Cache-Control": "s-maxage=1, stale-while-revalidate=59"
      }
    },
    {
      "src": "/(.*\\.(ico|png|jpg|jpeg|svg|gif|webp|woff2?|ttf|otf))$",
      "headers": {
        "cache-control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/"
    }
  ],
  "regions": ["iad1"]            
}